@model IEnumerable<UniversitasIndonesia.Models.Mahasiswa>

@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Mahasiswa List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Mahasiswa" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Create New Mahasiswa
                </a>
            </div>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Mahasiswa Name
                        </th>
                        <th>
                            Fakultas
                        </th>
                        <th>
                            Jurusan
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="25%">@obj.Name</td>
                            <td width="25%">@obj.Fakultas</td>
                            <td width="25%">@obj.Jurusan</td>
                            <td width="25% class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Mahasiswa" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Mahasiswa" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Mahasiswa Exists.</p>
        }
    </div>
